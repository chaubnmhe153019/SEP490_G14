@model IEnumerable<AttAssApplication.Model.Token>

@{
    ViewData["Title"] = "Index";
}
<h1>Welcome @ViewBag.username to ATTASS Application!</h1>
<h3 style="margin= 10px 0px 10px 0px">Manage Access Tokens</h3>
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TokenId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TokenHash)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TokenId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TokenHash)
                </td>
                <td>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalCenter@(item.TokenId)" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Delete Access Token</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this access token?
                                </div>
                                <div class="modal-footer">
                                    <form asp-action="Delete">
                                        <input id="confirm" type="submit" asp-route-id="@item.TokenId" asp-action="Delete" value="Delete" class="btn btn-danger" data-save="modal" />
                                        <input type="submit" data-dismiss="modal" value="Cancel" class="btn btn-secondary" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a asp-action="Delete" data-toggle="modal" data-target="#exampleModalCenter@(item.TokenId)" asp-controller="Tokens" data-url="@Url.Action($"Delete/{item.TokenId}")">Delete</a>
                </td>               
            </tr>
}
    </tbody>
</table>





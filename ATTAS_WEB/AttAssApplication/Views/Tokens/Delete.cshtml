@model AttAssApplication.Model.Token

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Access Token</h1>

<h3>Are you sure you want to delete this access token?</h3>
<div>
    <h4>Token</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TokenHash)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TokenHash)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User)
        </dd>
    </dl>
    

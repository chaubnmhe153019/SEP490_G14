@model AttAssApplication.Model.User

@{
    ViewData["Title"] = "Login";
}

<h1 style="text-align:center">Automatic Teaching Tasks Assignment Scheduler Sub-system</h1>
<div style="text-align:center; margin-top:50px">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" style="margin:25px 0px 25px 0px">
            <label>Username:</label>
            <input asp-for="UserName" type="text" /> <br/>
            <span asp-validation-for="UserName" class="text-danger"></span>

        </div>
        <div class="form-group" style="margin:25px 0px 25px 0px">
            <label>Password:</label>
            <input asp-for="Password" type="password" /> <br />
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>
        <div>
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
